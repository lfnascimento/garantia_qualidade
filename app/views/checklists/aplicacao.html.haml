%p#notice
  = notice

%h1 Aplicação de Checklist

%p
  %strong Identificação:
  = @checklist.identificacao

%p
  %strong Fase:
  = @checklist.fase

= simple_form_for(@aplicacao) do |f|
  = f.input :projeto, as: :select, :collection => Projeto.find_all_by_organizacao(current_user.organizacao)
  = f.input :checklist_id, as: :hidden, :input_html => { :value => params[:id] }
  = f.input  :prazo, as: :integer, in: 1..30
  = f.button :submit, "Aplicar", class: "btn btn-primary"