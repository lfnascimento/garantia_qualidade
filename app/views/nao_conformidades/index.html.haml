%h1 Listing nao_conformidades

%table
  %thead
    %tr
      %th Descricao
      %th Origem
      %th Prazo
      %th Checklist
      %th Item
      %th
      %th
      %th

  %tbody
    - @nao_conformidades.each do |nao_conformidade|
      %tr
        %td= nao_conformidade.descricao
        %td= nao_conformidade.origem
        %td= nao_conformidade.prazo
        %td= nao_conformidade.checklist
        %td= nao_conformidade.item
        %td= link_to 'Show', nao_conformidade
        %td= link_to 'Edit', edit_nao_conformidade_path(nao_conformidade)
        %td= link_to 'Destroy', nao_conformidade, :method => :delete, :data => { :confirm => 'Are you sure?' }

